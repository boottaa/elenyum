{% extends 'base.html.twig' %}

{% block title %}Добавление должности{% endblock %}

{% block style %}
    {{ encore_entry_link_tags('calendar') }}
    {{ encore_entry_link_tags('workSchedulePost') }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('workSchedulePost') }}
{% endblock %}

{% block body %}
    <div id="workSchedulePost" class="row">
        <h3 class="mb-4" style="border-bottom: solid 1px #a8a8a8">График работы</h3>
        <vue-alert ref="alert"></vue-alert>
        <div class="col-lg-12">
            <div class="mb-3">
                <label for="roles" class="form-label">Выберете период</label>
                <br>
                <div id="workScheduleCalendar"></div>
            </div>

            <div class="mb-3">
                <label for="roles" class="form-label">Шаблон <span title="Выберете шаблон графика работы"><i class="fas fa-info-circle"></i></span></label>
                <v-select id="selectPositions" aria-required="true" @change="onSelected" v-model="object.template" :options="templates" label="title"></v-select>
            </div>
            <div class="mb-3">
                <vue-work-shedule v-model="object.monday" start="09:00" end="22:00"></vue-work-shedule>
            </div>

            <input type="button" v-on:click="send" class="btn btn-primary btn-user btn-block" value="Сохранить">
        </div>
        <div class="col-lg-4">
            <div id=""></div>
        </div>

        <!-- Modal-->
        <div class="modal fade" id="modalEvent" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalToggleLabel">Время работы</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="mb-3">
                                <vue-work-shedule v-model="selectedTime" text="Выберите время" start="09:00" end="22:00"></vue-work-shedule>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" v-on:click="send">Сохранить</button>
                        <button class="btn btn-danger" data-bs-target="#modalEvent" data-bs-toggle="modal">Отмена</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}